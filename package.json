{
  "name": "mi-productividad",
  "version": "1.0.0",
  "description": "Tu aplicación personal de gestión de tareas diarias",
  "main": "electron-main.js",
  "author": "Tu Nombre",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.tecnomata.miproductividad",
    "productName": "Mi Productividad",
    "directories": {
      "output": "dist",
      "buildResources": "."
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!.git"
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "sign": false
    },
    "compression": "store"
  }
}